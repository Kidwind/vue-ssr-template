{
  "name": "vue-ssr-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:ssr": "cross-env BUILD_TARGET=node NODE_ENV=development node ./server",
    "serve:both": "concurrently \"npm run serve\" \"npm run serve:ssr\" ",
    "build": "vue-cli-service build",
    "build:test": "vue-cli-service build --mode test",
    "build:ssr": "cross-env BUILD_TARGET=node vue-cli-service build --no-clean",
    "build:ssr:test": "cross-env BUILD_TARGET=node vue-cli-service build --mode test --no-clean",
    "build:both": "npm run build && npm run build:ssr",
    "build:both:test": "npm run build:test && npm run build:ssr:test",
    "lint": "vue-cli-service lint",
    "start": "cross-env NODE_ENV=production node ./server"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^2.6.5",
    "vue": "^2.6.10",
    "vue-router": "^3.0.3",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-eslint": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "koa": "^2.7.0",
    "koa-cookie": "^1.0.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-proxies": "^0.8.1",
    "koa-static": "^5.0.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lru-cache": "^5.1.1",
    "vue-server-renderer": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "webpack-node-externals": "^1.7.2"
  }
}
